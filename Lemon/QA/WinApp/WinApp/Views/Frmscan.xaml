<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WinApp.Frmscan">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" Padding="10" HorizontalOptions="End" VerticalOptions="Start">
                <Button x:Name="btnScan" Text="扫一扫" Clicked="btnScan_Clicked" />
            </StackLayout>

            <StackLayout Grid.Row="1" Padding="10" HorizontalOptions="Center" VerticalOptions="Center">
                <StackLayout Orientation="Vertical" Spacing="10">
                    <Button x:Name="btnExamination" Text="考试" Clicked="btnExamination_Clicked" />
                    <Button x:Name="btnWrongQuestion" Text="错题集" Clicked="btnWrongQuestion_Clicked" />
                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentPage.Content>

</ContentPage>


